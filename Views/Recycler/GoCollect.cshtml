@model IEnumerable<RecyclingProject.Data.Model.Collector>

@{
    ViewData["Title"] = "GoCollect";
}

<div class="text-center">
<h1>Your available collection points</h1>
<button class="my-btn"><a asp-action="RecyclerDetails" asp-route-recyclerId="@ViewBag.RecyclerId">Return To Details</a></button>
</div>

<table class="table">
    <thead>
        <tr class="tableHeadLineContent">
            <th>
                Name
            </th>
            <th>
                Address
            </th>
            <th>
                Number of bottles
            </th>
            <th>
                Bottles worth
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="tableValueContent">
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @item.Address.Address1
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CurrentNumOfBottles)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CurrentWorth)
                </td>
                <td>
                    <button class="my-btn"><a asp-action="Redeem" asp-route-collectorId="@item.Id" asp-route-recyclerId="@ViewBag.RecyclerId">Collect</a></button>
                    <button class="my-btn"><a asp-action="SeeLocation" asp-route-collectorId="@item.Id" asp-route-recyclerId="@ViewBag.RecyclerId">See Location</a></button>
                </td>
            </tr>
        }
    </tbody>
</table>


