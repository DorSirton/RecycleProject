@model RecyclingProject.Data.Model.Recycler;

@{
    ViewData["Title"] = "RecyclerDetails";
}
<div class="regform">
<h1>Hello @Model.FirstName @Model.LastName</h1>
</div>

<div class="mane">
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CurrentNumOfBottles)
        </dt>
        <dd class="col-sm-10">
            @Model.Bottles.Count
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CurrentWorth)
        </dt>
        <dd class="col-sm-10">
            @String.Format("{0:0.##}", @ViewBag.CurrentWorth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalHistoryNumOfBottles)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalHistoryNumOfBottles)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalWorthHistory)
        </dt>
        <dd class="col-sm-10">
            @String.Format("{0:0.##}", Model.TotalWorthHistory)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Street, @ViewBag.City, @ViewBag.Country
        </dd>
    </dl>
<button class="my-btn"><a asp-action="GoCollect" asp-route-recyclerId="@Model.Id">Go Collect!</a></button>
<button class="my-btn"><a asp-action="CashOut" asp-route-recyclerId="@Model.Id">Cash Out Baby!</a></button>
</div>

